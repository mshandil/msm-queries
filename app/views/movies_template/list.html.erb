<h1>List of moviess</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
  </tr>

  <% Movie.all.each do |a_movies| %>
    <tr>
      <td><%= a_movies.id %></td>
      <td><img src="<%= a_movies.image %>" width="100"></td>
      <td><%= a_movies.title %></td>
      <td><%= a_movies.year %></td>
      <% matching_director = Director.where({ id: a_movies.director_id }) %>
      <td><%= matching_director.at(0).name %></td>
      <td>
        <a href="/movies/<%= a_movies.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
